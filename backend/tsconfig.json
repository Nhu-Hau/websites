{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "dist",             // <— quan trọng: xuất build ra dist/
    "sourceMap": true,            // tiện debug, tạo .map trong dist
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]  // tránh build chéo
}